#!/bin/bash
#
# Salt broker
###################################

# LSB header

### BEGIN INIT INFO
# Provides:          salt-broker
# Required-Start:    $all
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Salt broker, a lightweight proxy for saltstack
# Description:       This is a lightweight proxy for salt
### END INIT INFO


# description:   This is a lightweight proxy for salt
#
# processname: /usr/bin/salt-broker


DEBIAN_VERSION=/etc/debian_version
SUSE_RELEASE=/etc/SuSE-release
# Source function library.
if [[ -f $DEBIAN_VERSION ]]; then
   LOCKFILE="/var/run/salt-broker.lock"
elif [[ -f $SUSE_RELEASE && -r /etc/rc.status ]]; then
    . /etc/rc.status
else
    . /etc/rc.d/init.d/functions
fi

# Default values (can be overridden below)
SALTBROKER=/usr/bin/salt-broker
PYTHON=/usr/bin/python
SYNDIC_ARGS=""

if [[ -f /etc/default/salt-broker ]]; then
    . /etc/default/salt-broker
fi

SERVICE=salt-broker
PROCESS=salt-broker

RETVAL=0

start() {
    echo -n $"Starting salt-broker daemon: "
    if [[ -f $SUSE_RELEASE ]]; then
        startproc -f -p /var/run/$SERVICE.pid $SALTBROKER -d $SYNDIC_ARGS
        rc_status -v
    elif [[ -e $DEBIAN_VERSION ]]; then
        if [[ -f $LOCKFILE ]]; then
            echo -n "already started, lock file found" 
            RETVAL=1
        elif $PYTHON $SALTBROKER -d $SYNDIC_ARGS >& /dev/null; then
            touch $LOCKFILE
            echo -n "OK"
            RETVAL=0
        fi
    else
        daemon --check $SERVICE $SALTBROKER -d $SYNDIC_ARGS
    fi
    RETVAL=$?
    echo
    return $RETVAL
}

stop() {
    echo -n $"Stopping salt-broker daemon: "
    if [ -f $SUSE_RELEASE ]; then
        killproc -TERM $SALTBROKER
        rc_status -v
    elif [ -f $DEBIAN_VERSION ]; then
        # Added this since Debian's start-stop-daemon doesn't support spawned processes
        if ps -ef | grep "$PYTHON $SALTBROKER" | grep -v grep | awk '{print $2}' | xargs kill &> /dev/null; then
            rm -f $LOCKFILE
            echo -n "OK"
            RETVAL=0
        else
            echo -n "Daemon is not started"
            RETVAL=1
        fi
    else
        killproc $PROCESS
    fi
    source /etc/bashrc;/software/servers/zookeeper-3.4.5/bin/zkCli.sh -server 172.16.163.14:2181 rmr /broker
    RETVAL=$?
    echo
}

restart() {
   stop
   start
}

# See how we were called.
case "$1" in
    start|stop|restart)
        $1
        ;;
    status)
        if [ -f $SUSE_RELEASE ]; then
            echo -n "Checking for service salt-broker "
            checkproc $SALTBROKER
            rc_status -v
        elif [ -f $DEBIAN_VERSION ]; then
            if [ -f $LOCKFILE ]; then
                RETVAL=0
                echo "salt-broker is running."
            else
                RETVAL=1
                echo "salt-broker is stopped."
            fi
        else
            status $PROCESS
            RETVAL=$?
        fi
        ;;
    *)
        echo $"Usage: $0 {start|stop|status|restart}"
        exit 1
        ;;
esac
exit $RETVAL
